<div class="container d-flex justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
        <form id="frmEditCategory" action="" method="post">
            <h1>Chỉnh sửa lĩnh vực</h1>
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <label for="txtCategoryId" class="form-label">#</label>
                        <input type="text" class="form-control" id="txtCategoryId" value="{{category.category_id}}"
                            name="id" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="txtCategoryName" class="form-label">Tên lĩnh vực</label>
                        <input type="text" class="form-control" id="txtCategoryName" value="{{category.name}}"
                            name="name" autofocus />
                    </div>
                    <div class="mb-3">
                        <label for="txtCategoryDescription" class="form-label">Mô tả lĩnh vực</label>
                        <input type="text" class="form-control" id="txtCategoryDescription"
                            value="{{category.description}}" name="description" />
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <a class="btn btn-outline-success" href="/admin/category/list" role="button">
                        <i class="bi bi-arrow-left"></i>
                        Quay lại
                    </a>
                    <button type="submit" class="btn btn-outline-success" formaction="/admin/category/del" formmethod="post">
                        <i class="bi bi-trash"></i>
                        Xóa
                    </button>
                    <button type="submit" class="btn btn-outline-success" formaction="/admin/category/edit" formmethod="post">
                        <i class="bi bi-check2"></i>
                        Lưu
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>