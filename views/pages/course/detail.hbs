<h1 class="course-detail-title">Chi tiết khóa học</h1>

<div class="card course-detail-card">
    <div class="card-body">
        {{#with course}}
        <img class="course-detail-img" src="/public/imgs/courses/{{course_id}}.jpg" alt="No image"
            onerror="this.onerror=null; this.src='/public/imgs/no_image.jpg';">

        <div class="d-flex gap-3 align-items-center mb-3">
            <h4 class="course-detail-name">{{name}}</h4>
            {{#if @root.isAuthenticated}}
            <a href="#" class="btn btn-sm btn-outline-success btn-expand">
                <i class="bi bi-heart"></i>
                <span class="btn-text">Quan tâm</span>
            </a>
            {{/if}}
        </div>
        <div class="course-detail-description">
            {{{long_des}}}
        </div>

        <div class="course-meta">
            <span><i class="bi bi-calendar"></i> {{formatDate created_at}}</span>
            <span><i class="bi bi-arrow-repeat"></i> {{formatDate updated_at}}</span>
        </div>

        <div class="course-stats">
            <span><i class="bi bi-star-fill"></i> {{rating}}</span>
            <span><i class="bi bi-people-fill"></i> {{rating_count}}</span>
            <span><i class="bi bi-eye-fill"></i> {{view_count}}</span>
            {{#if (isNew created_at)}}
            <span class="course-badge">Mới</span>
            {{/if}}
        </div>
        {{/with}}
    </div>

    {{> course-section
    title="Khóa học liên quan"
    subTitle="Khám phá các khóa học liên quan"
    courses=courses
    }}
</div>

{{> course-effects}}