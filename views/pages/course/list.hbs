<h1>Danh sách khóa học</h1>
<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <h4 class="card-title">{{filter.name}}</h4>
            <h4 class="card-title">{{filter.totalText}}</h4>
        </div>
        {{#if (eq courses.length 0)}}
        <div class="row">
            <div class="col">
                <p>Không tìm thấy khóa học</p>
            </div>
        </div>
        {{else}}
        <div class="row">
            {{#each courses}}
            {{> course-card}}
            {{/each}}
        </div>
        {{> pagination}}
        {{/if}}
    </div>
</div>

{{> course-effects}}