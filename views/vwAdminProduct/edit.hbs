<form id="frmEditProduct" action="" method="post">
    <div class="card">
        <div class="card-header">Edit Category</div>
        <div class="card-body">
            <div class="mb-3">
                <label for="txtCategoryId" class="form-label">#</label>
                <input type="text" class="form-control" id="txtCategoryId" value="{{category.id}}" name="id" readonly />
            </div>
            <div class="mb-3">
                <label for="txtCategoryName" class="form-label">Category</label>
                <input type="text" class="form-control" id="txtCategoryName" value="{{category.name}}" name="name"
                    autofocus />
            </div>
        </div>
        <div class="card-footer text-muted">
            <a class="btn btn-outline-primary" href="/admin/course" role="button">
                <i class="bi bi-arrow-left"></i>
                Trở về
            </a>
            <button type="submit" class="btn btn-danger" formaction="/admin/course/del" formmethod="post">
                <i class="bi bi-trash"></i>
                Xóa
            </button>
            <button type="submit" class="btn btn-success" formaction="/admin/course/patch" formmethod="post">
                <i class="bi bi-check2"></i>
                Lưu
            </button>
        </div>
    </div>
</form>