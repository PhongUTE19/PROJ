<div class="card">
    <div class="card-header">Search result for "{{q}}"</div>
    <div class="card-body">
        {{#if empty}}
        <div class="row">
            <div class="col">
                <p>Product not found</p>
            </div>
        </div>
        {{else}}
        <div class="row">
            {{#each productList}}
            <div class="col-md-6 mb-3">
                <div class="card">
                    <img src="/static/imgs/sp/{{proid}}/main_thumbs.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">{{proname}}</h4>
                        <h5 class="card-title text-danger">{{format_number price}} VND</h5>
                        <p class="card-text">{{tinydes}}</p>
                        <div class="d-flex justify-content-end gap-2">
                            <a href="/product/detail?proid={{proid}}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-info-circle"></i>
                                View details
                            </a>
                            {{#if ../isAuthenticated}}
                            <a href="#" class="btn btn-sm btn-outline-success">
                                <i class="bi bi-cart-plus"></i>
                                Add to cart
                            </a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="row">
            <nav aria-label="...">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link">Previous</a>
                    </li>
                    {{#each pageNumbers}}
                    {{#if isCurrent}}
                    <li class="page-item active">
                        <a class="page-link" href="javascript:void(0);">
                            {{value}}
                        </a>
                    </li>
                    {{else}}
                    <li class="page-item">
                        <a class="page-link" href="?catid={{catid}}&page={{value}}">
                            {{value}}
                        </a>
                    </li>
                    {{/if}}
                    {{/each}}
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
        {{/if}}
    </div>
    <div class="card-footer text-muted">Footer</div>
</div>